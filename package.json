{
  "name": "simple-widgets",
  "version": "1.2.4",
  "description": "A Collection of React components to make your React code simpler",
  "main": "ExampleApp.js",
  "scripts": {
    "setup": "npm install",
    "dev": "run-s pack-d maps",
    "dry": "run-s pack dry-run",
    "pub": "run-s pack release-it",
    "test": "jest",
    "coverage": "jest --coverage && cat ./tests/coverage/lcov.info ",
    "example": "See https://github.com/martinjackson/simple-widgets-sample.git",
    "maps": "cd lib && cp index.js.map index.map",
    "pack-d": "webpack --mode development  --progress",
    "pack": "webpack -p --mode production  --progress",
    "dry-run": "release-it --dry-run -n"
  },
  "babel": {
    "plugins": [
        "@babel/plugin-proposal-object-rest-spread",
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
    ],
    "presets": ["@babel/env", "@babel/react", "@babel/preset-flow"]
  },
  "jest": {
    "transform": {"^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest"},
    "unmockedModulePathPatterns": [
        "<rootDir>/node_modules/react",
        "<rootDir>/node_modules/react-dom",
        "<rootDir>/node_modules/react-addons-test-utils",
        "<rootDir>/node_modules/fbjs"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!test/**/*.test.js",
      "!test/webpack.config.js",
      "!test/ExampleApp.js",
      "!src/PrevDoubleListBox/**/*.js"
    ]  
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martinjackson/simple-widgets.git"
  },
  "keywords": [
    "React",
    "checkbox",
    "choice",
    "pulldown",
    "pdf",
    "radiobutton"
  ],
  "author": "Martin A. Jackson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/martinjackson/simple-widgets/issues"
  },
  "homepage": "https://github.com/martinjackson/simple-widgets#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/react": "^16.4.16",
    "@types/react-dom": "^16.0.9",
    "babel-cli": "^6.26.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "file-loader": "^2.0.0",
    "flow-bin": "^0.86.0",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.1",
    "json-loader": "^0.5.7",
    "npm-run-all": "^4.1.3",
    "progress-bar-webpack-plugin": "^1.11.0",
    "react": ">=16.0.1",
    "react-dom": ">=16.0.1",
    "react-test-renderer": "^16.6.3",
    "react-testing-library": "^5.3.0",
    "regenerator-runtime": "^0.13.1",
    "release-it": "^7.6.2",
    "style-loader": "^0.23.1",
    "testcafe": "^0.23.2",
    "wallaby-webpack": "^3.9.11",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "peerDependencies": {
    "@types/react": ">=16.0.1",
    "react": ">=16.0.1",
    "react-dom": ">=16.0.1"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "emotion": "^9.2.12",
    "react-autobind": "^1.0.6",
    "react-beautiful-dnd": "^10.0.1",
    "react-day-picker": "^7.2.4",
    "react-emotion": "^9.2.12",
    "styled-components": "^4.0.3"
  }
}
