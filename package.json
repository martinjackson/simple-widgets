{
  "name": "simple-widgets",
  "version": "1.8.4",
  "description": "A Collection of React components to make your React code simpler",
  "main": "./lib/index.js",
  "scripts": {
    "setup": "npm install",
    "dev": "npm run pack-d && npm run maps",
    "dry": "npm run pack && npm run dry-run",
    "pub": "npm run pack && npm run release",
    "test": "jest --colors",
    "watch": "jest --watch",
    "coverage": "jest --coverage && cat ./tests/coverage/lcov.info ",
    "example": "See https://github.com/martinjackson/simple-widgets-sample.git",
    "maps": "cd lib && cp index.js.map index.map",
    "pack": "webpack && npm run maps",
    "dry-run": "release-it --dry-run -n --no-git.requireCleanWorkingDir",
    "release": "release-it --no-git.requireCleanWorkingDir"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ],
    "presets": [
      "@babel/env",
      "@babel/react",
      "@babel/preset-flow"
    ]
  },
  "jest": {
    "browser": true,
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/fbjs"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}",
      "!**/src/obs/**",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!test/**/*.test.js",
      "!test/webpack.config.js",
      "!test/ExampleApp.js",
      "!src/PrevDoubleListBox/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martinjackson/simple-widgets.git"
  },
  "keywords": [
    "React",
    "checkbox",
    "choice",
    "pulldown",
    "pdf",
    "radiobutton"
  ],
  "author": "Martin A. Jackson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/martinjackson/simple-widgets/issues"
  },
  "homepage": "https://github.com/martinjackson/simple-widgets#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-flow": "^7.12.1",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@testing-library/dom": "^7.28.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": ">=17.0.0",
    "acorn-dynamic-import": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "core-js": "^3.8.1",
    "css-loader": "^5.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.15.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "flow-bin": "^0.140.0",
    "jest": "^26.6.3",
    "json-loader": "^0.5.7",
    "progress-bar-webpack-plugin": "^2.1.0",
    "react": ">=17.0.1",
    "react-dom": ">=17.0.1",
    "react-test-renderer": "^17.0.1",
    "regenerator-runtime": "^0.13.7",
    "release-it": "^14.2.2",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "testcafe": "^1.9.4",
    "wallaby-webpack": "^3.9.16",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "peerDependencies": {
    "@types/react": ">=17.0.0",
    "react": ">=17.0.1",
    "react-dom": ">=17.0.1"
  },
  "dependencies": {
    "babel-node": "^0.0.1-security",
    "date-fns": "^2.16.1",
    "react-autobind": "^1.0.6",
    "react-day-picker": "^7.4.8"
  }
}
