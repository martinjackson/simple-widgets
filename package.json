{
  "name": "simple-widgets",
  "version": "1.2.4",
  "description": "A Collection of React components to make your React code simpler",
  "main": "ExampleApp.js",
  "scripts": {
    "setup": "npm install",
    "dev": "npm run pack-d && npm run maps",
    "dry": "npm run pack && npm run dry-run",
    "pub": "npm run pack && npm run release",
    "test": "jest --colors",
    "watch": "jest --watch",
    "coverage": "jest --coverage && cat ./tests/coverage/lcov.info ",
    "example": "See https://github.com/martinjackson/simple-widgets-sample.git",
    "maps": "cd lib && cp index.js.map index.map",
    "pack-d": "webpack --mode development  --progress",
    "pack": "webpack -p --mode production  --progress",
    "dry-run": "release-it --dry-run -n",
    "release": "release-it"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ],
    "presets": [
      "@babel/env",
      "@babel/react",
      "@babel/preset-flow"
    ]
  },
  "jest": {
    "browser": true,
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/fbjs"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!test/**/*.test.js",
      "!test/webpack.config.js",
      "!test/ExampleApp.js",
      "!src/PrevDoubleListBox/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martinjackson/simple-widgets.git"
  },
  "keywords": [
    "React",
    "checkbox",
    "choice",
    "pulldown",
    "pdf",
    "radiobutton"
  ],
  "author": "Martin A. Jackson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/martinjackson/simple-widgets/issues"
  },
  "homepage": "https://github.com/martinjackson/simple-widgets#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/react": "^16.4.16",
    "@types/react-dom": "^16.8.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "file-loader": "^3.0.1",
    "flow-bin": "^0.98.1",
    "jest": "^24.8.0",
    "jest-dom": "^3.2.2",
    "json-loader": "^0.5.7",
    "progress-bar-webpack-plugin": "^1.12.1",
    "react": ">=16.8.6",
    "react-dom": ">=16.8.6",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^7.0.0",
    "regenerator-runtime": "^0.13.2",
    "release-it": "^12.1.0",
    "style-loader": "^0.23.1",
    "testcafe": "^1.1.4",
    "wallaby-webpack": "^3.9.15",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  },
  "peerDependencies": {
    "@types/react": ">=16.8.17",
    "react": ">=16.8.6",
    "react-dom": ">=16.8.6"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "emotion": "^10.0.9",
    "react-autobind": "^1.0.6",
    "react-beautiful-dnd": "^11.0.3",
    "react-day-picker": "^7.3.0",
    "react-emotion": "^10.0.0",
    "styled-components": "^4.2.0"
  }
}
